generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cowork {
  id          Int      @id @default(autoincrement())  
  companyName String
  url         String
  description String
  address     String?
  createdAt   DateTime @default(now())  
  owner    User?    @relation(name: "PostedBy", fields: [postedById], references: [id])  // 2
  postedById  Int?
  voters      User[]   @relation(name: "Votes")  // 1
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  coworks  Cowork[]  @relation(name: "PostedBy")
  votes    Cowork[] @relation(name: "Votes") 
}