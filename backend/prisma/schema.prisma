generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cowork {
  id          Int      @id @default(autoincrement())  
  companyName String
  url         String
  description String?
  createdAt   DateTime @default(now())  
  postedBy    User?    @relation(name: "PostedBy", fields: [postedById], references: [id]) 
  postedById  Int?
  voters      User[]   @relation(name: "Votes")
  address     Address?
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  coworks  Cowork[]  @relation(name: "PostedBy")
  votes    Cowork[] @relation(name: "Votes") 
}
model Address {
  id          Int      @id @default(autoincrement())  
  city        String
  postalCode  String
  street      String
  country     String
  user        Cowork @relation(fields: [coworkId], references: [id])
  coworkId Int  @unique // relation scalar field (used in the `@relation` attribute above)

}
